                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"userId\": 1,\n    \"medicalFacilityPolyDoctorId\": 1,\n    \"queueType\": \"Doctor\",\n    \"isPriority\": false\n}",
                            "options": {
                                "raw": {
