                {
                    "name": "Get Queue List",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/queues/?status=Waiting",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "queues",
                                ""
                            ],
