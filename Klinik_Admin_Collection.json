                        "url": {
                            "raw": "{{base_url}}/master/doctors",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "master",
                                "doctors"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Patients",
            "item": [
                {
                    "name": "Create Patient",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
